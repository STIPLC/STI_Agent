<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Splash">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/sti_logo_white" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="STI Agent Mobile"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_light"
                android:text="v1.0"
                android:textSize="17sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/copy_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Â© 2019 Soverign Trust Insurance Plc \n All right reserved."
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_margin="@dimen/size_eight"
            android:textColor="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/colorAccent"
            />



           <LinearLayout
               android:id="@+id/app_tag_name_below"
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:orientation="horizontal"
               android:background="#ffffff"
               android:gravity="end|center_vertical"
               >

               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/sti_logo_dark"
                   />
               <TextView
                   android:id="@+id/tag_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/montserrat_semibold"
                   android:text="STI Agent App"
                   android:textSize="15sp"
                   android:layout_margin="@dimen/size_ten"
                   android:textColor="@color/colorPrimary"
                   />


           </LinearLayout>





    </LinearLayout>




</RelativeLayout>