<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="@dimen/size_ten"
    android:id="@+id/renew_form_layout1"
    tools:context="com.example.sti_agent.operation_fragment.RenewPolicy_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_six"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renew Policy"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimary"

                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        >
                        <Spinner
                            android:id="@+id/polcynum_renew_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/spinner_bg"

                            />

                    </androidx.cardview.widget.CardView>



                    <Button
                        android:id="@+id/renew_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg_color_btn"
                        android:drawableEnd="@drawable/ic_rotate_right_black_24dp"
                        android:padding="@dimen/size_ten"
                        android:text="Renew"
                        android:elevation="4dp"
                        android:layout_marginTop="@dimen/size_six"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="@dimen/size_ten"

                        />


                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar1_s1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:clickable="false"
                        android:layout_gravity="start"
                        app:indicatorColor="@color/colorAccent"
                        app:indicatorName="BallTrianglePathIndicator"
                        tools:ignore="RtlHardcoded"/>


                </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
